<h1>Listing Ideas</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.in_groups_of(3) do |group| %>
      <div class="row">
        <% group.compact.each do |idea| %>
          <div class="col-md-4">
            <%= image_tag idea.picture_url(:thumb) if idea.picture.present? %>
            <h4><%= link_to idea.name, idea %></h4>
            <%= idea.description %>
          </div>
        <% end %>
      </div>
    <% end %>
  </tbody>
</table>

<br/>
